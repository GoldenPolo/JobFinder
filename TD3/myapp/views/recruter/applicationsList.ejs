<!DOCTYPE html> 
<html lang="fr">
    <head>
    <meta charset="UTF-8"> 
    <title></title>
    <meta name="description" content="">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    </head> 
    <body> 
        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid d-flex border-top-0 border-bottom border-dark">
                <div class="col col-2">
                    <img class="img-fluid m-2" src="/images/logo.png" alt="logo">
                </div>
                <ul class="navbar-nav">
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/recruter/myOffersList">Mes offres</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/recruter/addRecruter">Recruteurs</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/recruter/applicationsList">Candidatures</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/logout">Déconnexion</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="d-flex justify-content-end my-2">
            <div class="dropdown me-3">
                <button id="btnGroupDrop2" type="button" class="btn btn-outline-secondary dropdown-toggle mb-2 me-2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Trier
                </button>
                <div class="dropdown-menu me-3" aria-labelledby="btnGroupDrop2">
                    <a class="dropdown-item">Récent à ancient</a>
                    <a class="dropdown-item">Distance croissante</a>
                    <a class="dropdown-item">Salaire décroissant</a>
                </div>
            </div>
        </div>
        
        <div class="col">
            <% applications.forEach((application)=> { %>
                <div class="row card p-3 m-3">
                    <div class="d-flex w-100 justify-content-between">
                        <div class="d-flex flex-column">
                          <h5 class="mb-1"><%= application.prenom %> <%= application.nom %></h5>
                          <p class="mb-1">Date : moment(application.date).format('L')</p>
                      </div>
                      <button id="btnDetails"  type="button" class="btn btn-outline-secondary mx-2">Télécharger les documents</button>
                    </div>
                </div>
            <% }); %>
        </div>

        
    </body> 
</html>
