    </head> 
    <body> 
        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid d-flex border-top-0 border-bottom border-dark">
                <div class="col col-2">
                    <img class="img-fluid m-2" src="/images/logo.png" alt="logo">
                </div>
                <ul class="navbar-nav">
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/recruter/myFichesList">Nos fiches de poste</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/recruter/myOffersList">Nos offres</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/recruter/addRecruter">Recruteurs</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/recruter/applicationsList">Candidatures</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/logout">DÃ©connexion</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="col col-12">
            <div class="row m-3">
                <div class="col col-1 ms-5">
                    <a class="btn btn-outline-secondary w-100" href="/recruter/myFichesList">Retour</a>
                </div>
                <div class="col col-9">
                    <h2 class="m-2 text-center"><%= title %> - <%= fiche.intitule %></h2>
                </div>
            </div>
        </div>

        <div class="card m-5">
            <div class="d-flex flex-row justify-content-center">
                <div class="col col-3 m-3">
                    <div class="row">
                        <p>Intitule : <%= fiche.intitule %></p><br>
                    </div>
                    <div class="row">
                        <p>Statut : <%= fiche.statut %></p><br>
                    </div>
                    <div class="row">
                        <p>Type : <%= fiche.type %></p><br>
                    </div>
                </div>
                <div class="col col-5 m-3">
                    <!-- <div class="row overflow-auto h-50"> -->
                    <div class="row">
                        <p>Description :</p><br>
                        <div class="border">
                            <p> <%= fiche.description %></p>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <p>Responsable : <%= fiche.responsable %></p><br>
                    </div>
                </div>
                <div class="col col-3 m-3">
                    <div class="row">
                        <p>Salaire : <%= fiche.salaireMin %> - <%= fiche.salaireMax %></p><br>
                    </div>
                    <div class="row">
                        <p>Rythme : <%= fiche.rythme %></p><br>
                    </div>
                    <div class="row">
                        <p>Lieu : <%= fiche.lieu %></p><br>
                    </div>
                    <div class="row">
                        <p>Longitude : <%= fiche.longitude %></p><br>
                    </div>
                    <div class="row">
                        <p>Latitude : <%= fiche.latitude %></p><br>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col col-2">
                <a class="btn btn-outline-primary" href="/recruter/myFicheModif?id=<%= fiche.id %>">Modifier</a>
            </div>
            <div class="col col-2">
                <a class="btn btn-outline-primary" href="/recruter/myFicheDelete?id= <%= fiche.id %>">Supprimer</a>
            </div>
        </div>
        
    </body> 
</html>