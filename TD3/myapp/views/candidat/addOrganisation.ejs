    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    </head> 
    <body> 
        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid d-flex border-top-0 border-bottom border-dark">
                <div class="col col-2">
                    <img class="img-fluid m-2" src="/images/logo.png" alt="logo">
                </div>
                <ul class="navbar-nav">
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/candidat/offersList">Offres</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/candidat/addOrganisation">Ajouter organisation</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/candidat/becomeRecruter">Devenir recruteur</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/candidat/myApplications">Mes candidatures</a>
                    </li>
                    <li>
                        <a class="btn btn-outline-secondary m-2 me-5" href="/logout">Déconnexion</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="row justify-content-center">
            <form class="col col-6 mt-5" method="post" action="/candidat/newOrga">
                <div class="d-flex flex-row justify-content-center">
                    <div class="h1">Demande d'ajout d'une organisation</div>
                </div>
                <div class="d-flex flex-row justify-content-center">
                    <div class="p">Lorsque que votre demande sera acceptée, vous deviendrez automatiquement recruteur.</div>
                </div>
                <div class="card m-5">
                    <div class="row m-3 mx-5 text-center justify-content-center align-items-center">
                        <input class="form-control mb-3 mt-4" type="text" name="nomOrga" id="nomOrga" placeholder="Nom de l'organisation" required>
                        <input class="form-control mb-3" type="number" name="siren" id="siren" placeholder="Numéro SIREN" pattern="^[0-9]{,14}" required>
                        <input class="form-control mb-3" type="text" name="type" id="type" placeholder="Type d'organisation" required>
                        <input class="form-control mb-3 mb-4" type="text" name="siege" id="siege" placeholder="Adresse du siège social" required>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-center">
                    <button type="submit" class="btn btn-outline-primary" href="">Valider</button>
                </div>
            </form>
        </div>
    </body> 
</html>
